<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/simple-app-test</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">postgres</property>
        <property name="connection.pool_size">8</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="com.geekbrains.ru.springmvcdemo.domain.Category"/>
        <mapping class="com.geekbrains.ru.springmvcdemo.domain.Product"/>
        <mapping class="com.geekbrains.ru.springmvcdemo.domain.Customer"/>
        <mapping class="com.geekbrains.ru.springmvcdemo.domain.PurchaseDetails"/>
    </session-factory>
</hibernate-configuration>